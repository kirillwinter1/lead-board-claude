# Lead Board - Production Environment
# Copy this file to .env.prod and fill in your values

# ========================================
# DATABASE (Managed PostgreSQL on reg.ru)
# ========================================
DB_HOST=your-db-host.reg.ru
DB_PORT=5432
DB_NAME=leadboard
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# ========================================
# CORS (your domain)
# ========================================
CORS_ALLOWED_ORIGINS=https://leadboard.ru,https://www.leadboard.ru

# ========================================
# JIRA CONFIGURATION
# ========================================
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_EMAIL=your-email@company.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=YOUR_PROJECT
JIRA_TEAM_FIELD_ID=customfield_12345
JIRA_ORGANIZATION_ID=
JIRA_SYNC_INTERVAL_SECONDS=600

# ========================================
# ATLASSIAN OAUTH 2.0
# ========================================
# Get these from https://developer.atlassian.com/console/myapps/
ATLASSIAN_CLIENT_ID=your_client_id
ATLASSIAN_CLIENT_SECRET=your_client_secret
ATLASSIAN_REDIRECT_URI=https://leadboard.ru/oauth/atlassian/callback
ATLASSIAN_SITE_BASE_URL=https://your-company.atlassian.net
